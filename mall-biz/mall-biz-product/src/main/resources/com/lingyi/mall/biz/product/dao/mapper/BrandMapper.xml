<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lingyi.mall.biz.product.dao.mapper.BrandMapper">
    <resultMap id="BaseResultMap" type="com.lingyi.mall.biz.product.model.vo.BrandVO">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="merchant_id" jdbcType="BIGINT" property="merchantId"/>
        <result column="shop_id" jdbcType="BIGINT" property="shopId"/>
        <result column="user_id" jdbcType="BIGINT" property="userId"/>
        <result column="first_character" jdbcType="CHAR" property="firstCharacter"/>
        <result column="logo" jdbcType="VARCHAR" property="logo"/>
        <result column="main_pic" jdbcType="VARCHAR" property="mainPic"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="create_by" jdbcType="VARCHAR" property="createBy"/>
        <result column="create_date_time" jdbcType="TIMESTAMP" property="createDateTime"/>
        <result column="last_modify_by" jdbcType="VARCHAR" property="lastModifyBy"/>
        <result column="last_modify_date_time" jdbcType="TIMESTAMP" property="lastModifyDateTime"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, merchant_id, shop_id, user_id, first_character, logo, main_pic, `name`, create_by,
    create_date_time, last_modify_by, last_modify_date_time
    </sql>
    <sql id="Base_Condition">
        <if test="name!=null and name!=''">
            AND `name` LIKE CONCAT('%',#{name,jdbcType=VARCHAR},'%')
        </if>
    </sql>
    <select id="selectById" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM mp_brand
        WHERE id=#{id,jdbcType=BIGINT}
    </select>
    <select id="countByParam" resultType="java.lang.Long">
        SELECT COUNT(*)
        FROM mp_brand
        <where>
            <include refid="Base_Condition"/>
        </where>
    </select>
    <select id="selectListByParam" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM mp_brand
        <where>
            <include refid="Base_Condition"/>
        </where>
    </select>
</mapper>
